{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Application",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\dist\\src\\lib.js",
      "preLaunchTask": "npm: build:dev",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "name": "Tests",
      "request": "launch",
      "runtimeArgs": ["run-script", "test"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    }
  ]
}
